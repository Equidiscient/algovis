<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:algo_vis.ui.ViewModels"
             xmlns:controls="clr-namespace:algo_vis.ui.Skia"
             xmlns:skia="clr-namespace:algo_vis.ui.Skia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="algo_vis.ui.Views.VisualiserView"
             x:DataType="vm:VisualiserViewModel">
    
    <Grid RowDefinitions="*,Auto" Margin="10" >
        <!-- row 0 is a canvas for the rendering -->
        <skia:SkiaCanvas Bitmap="{Binding RenderedOutput}"
                    x:Name="OutputCanvas"
                    Width="400"
                    Height="300"/>

        <!-- row 1 displays explanations and/or logs -->
        <TextBlock Grid.Row="1" Text="{Binding Explanation}"
                   TextWrapping="Wrap" />
    </Grid>
</UserControl>
