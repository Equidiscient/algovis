<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:algo_vis.ui.ViewModels"
        xmlns:conv="clr-namespace:algo_vis.ui.Views.Converters"
        x:Class="algo_vis.ui.Views.ShellView"
        Title="Algorithm Visualisation"
        x:DataType="vm:ShellViewModel"
        Width="800" Height="450">

  <Window.Resources>
    <conv:InverseBooleanConverter x:Key="Inv"/>
  </Window.Resources>

  <Window.DataContext>
    <vm:ShellViewModel/>
  </Window.DataContext>

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <Border Grid.Column="0"
            Background="DarkSlateGray"
            BorderBrush="DimGray"
            BorderThickness="1"
            Padding="10"
            VerticalAlignment="Stretch"
            IsVisible="{Binding IsFlyoutOpen}">

      <DockPanel LastChildFill="True">

        <!-- Header row: Menu + toggle -->
        <Grid DockPanel.Dock="Top"
              ColumnDefinitions="*,Auto"
              Margin="0 0 0 10">
          <TextBlock Grid.Column="0"
                     Text="Menu"
                     FontSize="16"
                     Foreground="White"
                     VerticalAlignment="Center"/>
          <Button Grid.Column="1"
                  Content="☰"
                  Command="{Binding ToggleFlyoutCommand}"
                  VerticalAlignment="Center"/>
        </Grid>

        <!-- Algorithm list -->
        <ListBox DockPanel.Dock="Top"
                 ItemsSource="{Binding AllAlgorithms}"
                 SelectedItem="{Binding SelectedAlgorithm}"
                 Foreground="White"
                 Background="Transparent"
                 Margin="0 0 0 10"/>

        <!-- Bottom row: status | Go button, aligned to bottom -->
        <Grid DockPanel.Dock="Bottom"
              ColumnDefinitions="*,Auto"
              VerticalAlignment="Bottom"
              Margin="0 10 0 0">
          <!-- status area -->
          <StackPanel Grid.Column="0"
                      Orientation="Horizontal"
                      VerticalAlignment="Bottom">
            <ProgressBar Width="120"
                         Minimum="0"
                         Maximum="{Binding ProgressTotal}"
                         Value="{Binding ProgressCurrent}" />
            <TextBlock Margin="10,0,0,0"
                       VerticalAlignment="Bottom"
                       Foreground="White"
                       Text="{Binding DiscoveryStatus}" />
          </StackPanel>

          <!-- Go button -->
          <Button Grid.Column="1"
                  Content="Go"
                  Command="{Binding NavigateCommand}"
                  VerticalAlignment="Bottom"
                  Margin="10,0,0,0"/>
        </Grid>
      </DockPanel>
    </Border>

    <!-- lone toggle when closed -->
    <Button Grid.Column="0"
            Content="☰"
            Command="{Binding ToggleFlyoutCommand}"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="10"
            IsVisible="{Binding IsFlyoutOpen, Converter={StaticResource Inv}}"/>

    <!-- main content right of flyout -->
    <ContentControl Grid.Column="1"
                    Content="{Binding CurrentPage}"/>
  </Grid>
</Window>